<div class="container">
<h1>Add a new restaurant</h1>

<p><%= form_for(@restaurant) do |f|  %>
<%= f.label :name  %>
<%= f.text_field :name %>
<%= f.label :category  %>
<%= f.text_field :category%>
<%= f.label :phone_number  %>
<%= f.text_field :phone_number %>
<%= f.label :address  %>
<%= f.text_field :address %>
<%= f.submit %>

<% end  %></p>

<%= link_to "Back to restaurant list", "/restaurants", class: "btn btn-primary"%>
</div>
